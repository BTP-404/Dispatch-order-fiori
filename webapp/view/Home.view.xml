<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.zdispatchorder.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:ndc="sap.ndc"
>
    <Page
        id="page"
        enableScrolling="true"
    >
        <Panel
            id="_IDGenPanel"
            backgroundDesign="Translucent"
        >
            <VBox
                id="_IDGenVBox"
                alignItems="Center"
                class="headerVBox"
            >
            <core:Icon src=""></core:Icon>
                <Title
                    id="_IDGenTitle"
                    text="DISPATCH ORDER CONFIRMATION"
                />
            </VBox>
        </Panel>

        <VBox
            id="_IDGenVBox1"
            class="sapUiMediumMargin"
        >
            <HBox id="_IDGenHBox">
                <!-- Barcode scanner button and text on the same line -->
                <VBox id="_IDGenVBox2">
                    <HBox id="_IDGenHBox1">
                        <ndc:BarcodeScannerButton
                            id="sampleBarcodeScannerButton"
                            scanSuccess="onScanSuccess"
                            scanFail="onScanError"
                            inputLiveUpdate="onScanLiveupdate"
                            dialogTitle="Barcode Scanner Button Sample"
                        />
                        <Text
                            id="sampleBarcodeScannerResult"
                            text="Scan"
                            class="sapUiTinyMargin"
                        />
                    </HBox>
                </VBox>
            </HBox>

            <!-- Move Input control to the bottom -->
            <VBox
                id="_IDGenVBox3"
                justifyContent="End"
                alignItems="End"
                class="sapUiSmallMarginBegin"
            >
                <Input
                    id="_IDGenInput"
                    placeholder="bill no..."
                />
            </VBox>
        </VBox>
        <HBox justifyContent="Center" class="bgColour"><Title text="Product List"></Title></HBox>

        <layout:HorizontalLayout
            allowWrapping="true"
            content="{WM>/warehouse/pallets}"
            class="layoutcls"
        >
            <GenericTile
                header="{WM>product/product_name}"
                visible="true"
                class="sapUiTinyMargin tileColour "
                press="onClickEvent"
                frameType="OneByHalf"
            >
                <tileContent>
                    <TileContent
                        unit=""
                        footer=""
                    >
                        <VBox class="sapUiSmallMargin" justifyContent="Center">
                            <layoutData>
                                <FlexItemData
                                    growFactor="1"
                                    shrinkFactor="0"
                                />
                            </layoutData>
                           
                        </VBox>
                    </TileContent>
                </tileContent>
            </GenericTile>
        </layout:HorizontalLayout>
    </Page>
</mvc:View>
