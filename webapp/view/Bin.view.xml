<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.zdispatchorder.controller.Bin"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:ndc="sap.ndc"
    xmlns:layout="sap.ui.layout"
>
    <Page
        id="page"
        enableScrolling="true"
    >
        <Panel
            id="_IDGenPanel"
            backgroundDesign="Translucent"
        >
            <VBox
                id="_IDGenVBox"
                alignItems="Center"
                class="headerVBox"
            >
                <Title
                    id="_IDGenTitle"
                    text="DISPATCH ORDER CONFIRMATION"
                />
            </VBox>
        </Panel>

        <VBox
            id="_IDGenVBox1"
            class="sapUiSmallMargin"
        >
            <HBox id="_IDGenHBox">
                <!-- Barcode scanner button and text on the same line -->
                <VBox id="_IDGenVBox2">
                    <HBox id="_IDGenHBox1">
                        <ndc:BarcodeScannerButton
                            id="sampleBarcodeScannerButton"
                            scanSuccess="onScanSuccess"
                            scanFail="onScanError"
                            inputLiveUpdate="onScanLiveupdate"
                            dialogTitle="Barcode Scanner Button Sample"
                        />
                        <Text
                            id="sampleBarcodeScannerResult"
                            text="Scan"
                            class="sapUiTinyMargin"
                        />
                    </HBox>
                </VBox>
            </HBox>

            <!-- Move Input control to the bottom -->
            <VBox
                id="_IDGenVBox3"
                justifyContent="End"
                alignItems="End"
                class="sapUiSmallMarginBegin"
            >
                <Input
                    id="_IDGenInput"
                    placeholder="bill no..."
                />
            </VBox>
        </VBox>
        <HBox
            justifyContent="Center"
            class="bgColour"
        >
            <Title text="Bin Information" />
        </HBox>
        <layout:HorizontalLayout
            id="_IDGenHorizontalLayout"
            allowWrapping="true"
            content="{oRackModel>/}"
            class="layoutcls"
        >
            <GenericTile
                header="{oRackModel>rack_number}"
                visible="true"
                class="sapUiTinyMargin binColour"
                press="onClickEvent"
                frameType="OneByHalf"
            >
                <tileContent>
                    <TileContent
                        unit=""
                        footer=""
                    >
                        <VBox
                            class="sapUiSmallMargin"
                            justifyContent="Center"
                        >
                            <layoutData>
                                <FlexItemData
                                    growFactor="1"
                                    shrinkFactor="0"
                                />
                            </layoutData>
                        </VBox>
                    </TileContent>
                </tileContent>
            </GenericTile>
        </layout:HorizontalLayout>
        <HBox justifyContent="Center">
            <Button
                type="Success"
                text="Save"
                press="onPressSave"
            />
        </HBox>
    </Page>
</mvc:View>
